	public BookList convertFromInterface(BookListInterface remote) throws RemoteException {
		BookList a = new BookList();
		try {
			for (Book ai : remote.getBooks()) {
				a.addBook(BookFactory.getBooks(ai.getChapters(), ai.getPages()));
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
		return a;
	}

}
